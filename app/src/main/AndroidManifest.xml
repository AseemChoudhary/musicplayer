<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.templatemela.sangitguru">

    <uses-sdk tools:overrideLibrary="androidx.tvprovider" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
    <uses-permission android:name="android.perm8ission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.google.android.finsky.permission.BIND_GET_INSTALL_REFERRER_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <uses-permission android:name="com.android.providers.tv.permission.WRITE_EPG_DATA" />

    <application
        android:name="com.templatemela.sangitguru.radio.MainRadioHelper"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicPlayerApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.templatemela.sangitguru.MainCreationActivity"
            android:theme="@style/Theme.MusicPlayerApp"
            android:exported="true" />
        <activity
            android:name="com.templatemela.sangitguru.Splash"
            android:exported="true"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.templatemela.sangitguru.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.templatemela.sangitguru.radio.ActivityMain"
            android:exported="true"
            android:label="@string/app_name"
             android:theme="@style/Theme.MusicPlayerApp"
            android:launchMode="singleTop">
            <intent-filter>
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.templatemela.sangitguru.radio.service.PlayerService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.templatemela.sangitguru.radio.alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name=".AlarmReceiver" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="androidx.media.session.MediaButtonReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.templatemela.sangitguru.radio.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.templatemela.sangitguru.musicplayer.HomeActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.musicplayer.ViewAlbumSongsActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.musicplayer.PlayerActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp"
            />
        <activity
            android:name="com.templatemela.sangitguru.musicplayer.ViewArtistSongsActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.musicplayer.ViewFolderSongsActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />

        <service
            android:name="com.templatemela.sangitguru.musicplayer.PlayerService"
            android:enabled="true" />

        <activity
            android:name="com.templatemela.sangitguru.musicplayer.SearchActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.musicplayer.NewPlaylistActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.musicplayer.ViewPLaylistSongsActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />

        <receiver
            android:name="com.templatemela.sangitguru.musicplayer.CommonReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.templatemela.sangitguru.musicplayer.TimerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.musicplayer.FavouriteActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />


        <activity
            android:name="com.templatemela.sangitguru.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp">

        </activity>
        <activity
            android:name="com.templatemela.sangitguru.voice_change.RecordActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.voice_change.EffectActivity"
            android:screenOrientation="portrait"
             android:theme="@style/Theme.MusicPlayerApp" />

        <activity
            android:name="com.templatemela.sangitguru.ringtone.PrePostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.ringtone.CreateRingtoneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.ringtone.PlayToneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.ringtone.Music_Edit_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.ringtone.SelectRingtoneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.ringtone.SongEditActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.ringtone.PlayRingtoneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.ringtone.ListAllContactActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />

        <activity
            android:name="com.templatemela.sangitguru.ringtone.MyNameRingtoneListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
        <activity
            android:name="com.templatemela.sangitguru.ringtone.RingToneMainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MusicPlayerApp" />
    </application>

</manifest>